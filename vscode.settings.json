{
    // --- FILE SYSTEM & PERFORMANCE (The CPU Fix) ---
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/dist/**": true,
        "**/build/**": true,
        "**/target/**": true,
        "**/.next/**": true,
        "**/.venv/**": true,
        "**/venv/**": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/build": true,
        "**/target": true
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 10,
    "security.workspace.trust.untrustedFiles": "open",
    // --- EDITOR BEHAVIOR ---
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    // --- WORKBENCH & THEME ---
    "workbench.colorTheme": "Aura Dark",
    "window.systemColorTheme": "auto",
    "window.autoDetectColorScheme": true,
    "terminal.integrated.inheritEnv": false,
    // --- PYTHON & RUFF ---
    "python.analysis.typeCheckingMode": "standard",
    "ruff.path": [
        "/Users/ali/.local/bin/ruff"
    ],
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    // --- AI & GITHUB COPILOT ---
    "github.copilot.chat.commitMessageGeneration.instructions": [
        {
            "text": "Always strictly follow Conventional Commits format: <type>[optional scope]: <description>"
        },
        {
            "text": "Valid types: feat, fix, docs, style, refactor, perf, test, chore, ci, build, revert"
        }
    ],
    "chat.viewSessions.orientation": "stacked",
    "chat.mcp.gallery.enabled": true,
    // --- GIT ---
    "git.autofetch": true,
    "git.confirmSync": false,
    // --- OTHER LANGUAGES & TOOLS ---
    "jupyter.askForKernelRestart": false,
    "docker.extension.enableComposeLanguageServer": false,
    "hediet.vscode-drawio.resizeImages": null,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },
    "[dockercompose]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-containers"
    }
}